{
  "name": "@mufan/code-boilerplates",
  "version": "0.0.0",
  "description": "Code boilerplates for Mufan",
  "repository": "https://github.com/makeflow/mufan-code-boilerplates.git",
  "license": "MIT",
  "author": "Chengdu Mufan Technology Co., Ltd.",
  "exports": {
    "./general": {
      "types": "./general/bld/library/index.d.ts",
      "require": "./general/bld/library/index.js",
      "default": "./general/bld/library/index.js"
    },
    "./typescript": {
      "types": "./typescript/bld/library/index.d.ts",
      "require": "./typescript/bld/library/index.js",
      "default": "./typescript/bld/library/index.js"
    }
  },
  "scripts": {
    "3": "yarn && yarn-deduplicate && yarn",
    "build": "rimraf --glob */bld && tsc --build",
    "lint": "eslint --no-error-on-unmatched-pattern . && run-in-every eslint-project --parallel --echo -- eslint --no-error-on-unmatched-pattern .",
    "lint-prettier": "prettier --check .",
    "test": "yarn lint-prettier && yarn build && yarn lint"
  },
  "dependencies": {
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@mufan/code": "^0.2.16",
    "@mufan/eslint-plugin": "^0.1.80",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "run-in-every": "^0.2.0",
    "typescript": "^5.0.4",
    "yarn-deduplicate": "^6.0.2"
  }
}
