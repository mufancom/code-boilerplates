{
  "root": true,
  "ignorePatterns": [
    "files/",
    "node_modules/",
    "/general/src/",
    "/general/bld/",
    "/typescript/src/",
    "/typescript/bld/"
  ],
  "extends": ["plugin:@mufan/javascript"],
  "overrides": [
    {
      "files": "**/*.{js,mjs}",
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "files": "**/*.cjs",
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ]
}
